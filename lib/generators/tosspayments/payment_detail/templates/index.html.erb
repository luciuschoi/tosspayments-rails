<%%# 결제 상세 정보 목록 페이지 %>
<div class="container mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">결제 내역</h1>
    <%%= link_to "통계 보기", statistics_payment_details_path, 
        class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>

  <%%# 필터 폼 %>
  <div class="bg-gray-50 p-4 rounded-lg mb-6">
    <%%= form_with url: payment_details_path, method: :get, local: true, class: "grid grid-cols-1 md:grid-cols-4 gap-4" do |form| %>
      <div>
        <%%= form.label :status, "결제 상태", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%%= form.select :status, 
            options_for_select([
              ['전체', ''],
              ['결제 완료', 'done'],
              ['결제 취소', 'canceled'],
              ['결제 실패', 'failed'],
              ['결제 대기', 'ready']
            ], params[:status]), 
            {}, 
            class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
      </div>
      
      <div>
        <%%= form.label :method, "결제 방법", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%%= form.select :method, 
            options_for_select([
              ['전체', ''],
              ['카드', 'card'],
              ['계좌이체', 'transfer'],
              ['가상계좌', 'virtual_account']
            ], params[:method]), 
            {}, 
            class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
      </div>
      
      <div>
        <%%= form.label :start_date, "시작일", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%%= form.date_field :start_date, value: params[:start_date], 
            class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
      </div>
      
      <div>
        <%%= form.label :end_date, "종료일", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%%= form.date_field :end_date, value: params[:end_date], 
            class: "w-full border border-gray-300 rounded-md px-3 py-2" %>
      </div>
      
      <div class="md:col-span-4 flex gap-2">
        <%%= form.submit "필터 적용", 
            class: "bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600" %>
        <%%= link_to "초기화", payment_details_path, 
            class: "bg-gray-300 text-gray-700 px-4 py-2 rounded hover:bg-gray-400" %>
      </div>
    <%% end %>
  </div>

  <%%# 결제 목록 %>
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul class="divide-y divide-gray-200">
      <%% @payment_details.each do |payment| %>
        <li>
          <%%= link_to payment_detail_path(payment), class: "block hover:bg-gray-50" do %>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center">
                  <div class="flex-shrink-0">
                    <div class="h-10 w-10 rounded-full bg-gray-300 flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-700">
                        <%%= payment.method&.first&.upcase %>
                      </span>
                    </div>
                  </div>
                  <div class="ml-4">
                    <div class="flex items-center">
                      <p class="text-sm font-medium text-gray-900">
                        <%%= payment.order_name %>
                      </p>
                      <span class="ml-2 inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%%= payment.successful? ? 'bg-green-100 text-green-800' : (payment.failed? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800') %>">
                        <%%= payment.status_name %>
                      </span>
                    </div>
                    <div class="mt-1 flex items-center text-sm text-gray-500">
                      <p>주문번호: <%%= payment.order_id %></p>
                      <span class="mx-2">•</span>
                      <p>결제키: <%%= payment.payment_key %></p>
                    </div>
                  </div>
                </div>
                <div class="text-right">
                  <p class="text-lg font-semibold text-gray-900">
                    <%%= payment.formatted_total_amount %>
                  </p>
                  <p class="text-sm text-gray-500">
                    <%%= payment.approved_at&.strftime("%Y년 %m월 %d일 %H:%M") %>
                  </p>
                </div>
              </div>
            </div>
          <%% end %>
        </li>
      <%% end %>
    </ul>
  </div>

  <%%# 페이지네이션 %>
  <%% if @payment_details.respond_to?(:current_page) %>
    <div class="mt-6">
      <%%= paginate @payment_details %>
    </div>
  <%% end %>
</div> 