<%# 결제 내역 목록 페이지 %>
<div class="container mx-auto p-6">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">결제 내역</h1>
      <p class="mt-1 text-sm text-gray-600">전체 결제 내역을 확인하세요</p>
    </div>
    <%= link_to "통계 보기", statistics_payment_details_path, 
        class: "bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors" %>
  </div>

  <% if @payment_details.any? %>
    <div class="bg-white shadow-sm border border-gray-200 rounded-lg overflow-hidden">
      <div class="divide-y divide-gray-200">
        <% @payment_details.each do |payment| %>
          <%= link_to payment_detail_path(payment), class: "block hover:bg-gray-50 transition-colors" do %>
            <div class="p-6">
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-4">
                  <div class="flex-shrink-0">
                    <div class="h-12 w-12 rounded-full bg-gradient-to-r from-blue-500 to-blue-600 flex items-center justify-center">
                      <span class="text-lg font-semibold text-white">
                        <%= payment.method&.first&.upcase || "?" %>
                      </span>
                    </div>
                  </div>
                  <div class="min-w-0 flex-1">
                    <div class="flex items-center space-x-3">
                      <p class="text-lg font-medium text-gray-900 truncate">
                        <%= payment.order_name %>
                      </p>
                      <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= payment.successful? ? 'bg-green-100 text-green-800' : (payment.failed? ? 'bg-red-100 text-red-800' : 'bg-yellow-100 text-yellow-800') %>">
                        <%= payment.status_name %>
                      </span>
                    </div>
                    <div class="mt-2 flex items-center space-x-4 text-sm text-gray-500">
                      <span class="flex items-center">
                        <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        주문번호: <%= payment.order_id %>
                      </span>
                      <span class="flex items-center">
                        <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v-2l-4.257-2.257A6 6 0 1119 9z" />
                        </svg>
                        결제키: <%= payment.payment_key %>
                      </span>
                    </div>
                  </div>
                </div>
                <div class="text-right">
                  <p class="text-2xl font-bold text-gray-900">
                    <%= payment.formatted_total_amount %>
                  </p>
                  <p class="text-sm text-gray-500 mt-1 flex items-center justify-end">
                    <svg class="mr-1.5 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <%= payment.approved_at&.strftime("%Y년 %m월 %d일 %H:%M") || "처리 중" %>
                  </p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">결제 내역이 없습니다</h3>
      <p class="mt-1 text-sm text-gray-500">아직 처리된 결제가 없습니다.</p>
    </div>
  <% end %>

  <%# 페이지네이션 %>
  <% if @pagy&.pages && @pagy.pages > 1 %>
    <div class="mt-8 flex justify-center">
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4">
        <%== pagy_nav(@pagy) %>
      </div>
    </div>
  <% end %>
</div> 