<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>결제 상세 정보</h2>
    <div>
      <%%= link_to "새로고침", payment_details_path, class: "btn btn-outline-primary" %>
    </div>
  </div>

  <%% if @payment_details.any? %>
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>결제 키</th>
                <th>주문 ID</th>
                <th>금액</th>
                <th>상태</th>
                <th>결제 방법</th>
                <th>승인일시</th>
                <th>액션</th>
              </tr>
            </thead>
            <tbody>
              <%% @payment_details.each do |payment_detail| %>
                <tr>
                  <td>
                    <code><%%= payment_detail.payment_key %></code>
                  </td>
                  <td><%%= payment_detail.order_id %></td>
                  <td>
                    <strong><%%= number_to_currency(payment_detail.total_amount, unit: "₩", format: "%%u %%n") %></strong>
                  </td>
                  <td>
                    <%% case payment_detail.status %>
                    <%% when 'DONE' %>
                      <span class="badge bg-success">완료</span>
                    <%% when 'CANCELED' %>
                      <span class="badge bg-danger">취소</span>
                    <%% when 'PARTIAL_CANCELED' %>
                      <span class="badge bg-warning">부분취소</span>
                    <%% when 'ABORTED' %>
                      <span class="badge bg-secondary">중단</span>
                    <%% when 'EXPIRED' %>
                      <span class="badge bg-dark">만료</span>
                    <%% else %>
                      <span class="badge bg-primary"><%%= payment_detail.status %></span>
                    <%% end %>
                  </td>
                  <td>
                    <%% if payment_detail.method.present? %>
                      <%%= payment_detail.method %>
                    <%% else %>
                      -
                    <%% end %>
                  </td>
                  <td>
                    <%% if payment_detail.approved_at.present? %>
                      <%%= payment_detail.approved_at.strftime("%%Y-%%m-%%d %%H:%%M") %>
                    <%% else %>
                      -
                    <%% end %>
                  </td>
                  <td>
                    <%%= link_to "상세보기", payment_detail_path(payment_detail), class: "btn btn-sm btn-outline-primary" %>
                  </td>
                </tr>
              <%% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%% if respond_to?(:paginate) && @payment_details.respond_to?(:current_page) %>
      <div class="d-flex justify-content-center mt-4">
        <%%= paginate @payment_details %>
      </div>
    <%% end %>
  <%% else %>
    <div class="card">
      <div class="card-body text-center py-5">
        <div class="mb-4">
          <i class="fas fa-credit-card fa-3x text-muted"></i>
        </div>
        <h4 class="text-muted">결제 상세 정보가 없습니다</h4>
        <p class="text-muted">아직 등록된 결제 정보가 없습니다.</p>
      </div>
    </div>
  <%% end %>
</div>
